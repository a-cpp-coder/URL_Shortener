<%= form_with model: link do |form| %>
  <div class="flex gap-2 items-center" >
    <%= form.url_field :url, required: true, autofocus: true, placeholder: 'Enter a URL', class: "flex-grow rounded" %>
    <!--required: true (enforce the existence at view level)-->
    <%= form.button "Shorten", class: "px-3 py-2 bg-gray-100 rounded" %>
  </div>
<% end %>